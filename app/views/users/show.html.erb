<div class='container'>
	<div class='page-header'>
		<h1 class='user-name'><%= @user.name %>
			<% if (@current_user && @current_user.id != @user.id) %>
				<small> - <a href ="#">Follow</a></small></h1>
			<% end %>
	</div>

	<div class='row profile-content'>
		<div class='col-md-6'>
			<img src='http://mineshots.com/design/frontend/images/ms/no-user.jpg'>
		</div>
		<div class='col-md-6'>
			<h1>Calendar will go here</h1>
		</div>
	</div>

	<div class='row'>
		<div class='col-md-6'>
			<h1>Users they follow</h1>
		</div>
			<div class='col-md-6'>
			<h1>Users they are followed by</h1>
		</div>
	</div>

	<% if(@current_user && @current_user.id == @user.id) %>
		<%= link_to '<i class="fa fa-trash-o"></i> Delete Profile'.html_safe, @user, class: 'btn btn-danger', method: :delete %>
	<% end %>

</div>



