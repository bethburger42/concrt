<div class='container'>
	<div class='page-header'>
		<h1><span id='network'>Network</span>
		<% unless (@current_user) %>
			<small>- <%= link_to 'Sign-Up Today!', '#signup', 'data-toggle' => 'modal', 'data-target' => '#signup'%></small></h1>
			<% end %>
			<%= bootstrap_form_for users_path, :method => 'GET', id: 'search-form' do |f| %>
				  <p>
				    <%= f.text_field params[:search], placeholder: 'Search Users' %>
				    <%= f.submit "Search" %>
				  </p>
			<% end %>
	</div>
	<div class='row'>
		<% @users.each do |user| %>
			<div class='col-md-2 user'>
				<img src='http://mineshots.com/design/frontend/images/ms/no-user.jpg'>
				<h3><%= link_to user.name, user %></h3>
			</div>
		<% end %>
	</div>
</div>

