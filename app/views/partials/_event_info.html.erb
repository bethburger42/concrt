<div class="modal custom fade" id="event_info" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog">
    <div class="modal-content">
    	<div class='m-div'>
		  	<h1 class="event-artist"></h1>
			<p class="event-date"></p>
			<p class="event-location"></p>

			<% if (@current_user == @user) %>
				<%= bootstrap_form_tag url: '/remove' do |f| %>
					<%= f.hidden_field :user_id, value: @current_user ? @current_user.id : -1 %>
					<%= f.hidden_field :event_id, class: 'event-id' %>
					<%= f.primary 'Remove Event' %>
				<% end  %>
			<% end %>
				<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
		</div>
    </div>
  </div>
</div>
