<!DOCTYPE html>
<html>
<head>
	<link rel="stylesheet" media="screen" href="//netdna.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
	<link href='https://fonts.googleapis.com/css?family=Muli' rel='stylesheet' type='text/css'>
	<link rel="stylesheet" type="text/css" href='https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css'>
	<title>Concrt</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<%= render 'partials/flash' %>

<nav class="navbar navbar-default" role="navigation">
	<div class="navbar-header">
		<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
			<span class="sr-only">Toggle navigation</span>
			<span class="icon-bar"></span>
			<span class="icon-bar"></span>
			<span class="icon-bar"></span>
		</button>
		<a id='brand' class="navbar-brand" href="/">Concrt</a>
	</div>

<% if (@current_user) %>
	<div class="collapse navbar-collapse navbar-ex1-collapse">
		<ul class="nav navbar-nav navbar-right">
			<li id='nav-links'><%= link_to 'Me', user_path%></li>
			<li class='nav-links'><%= link_to 'Users', users_path%></li>
			<li class='nav-links'><%= link_to 'See a Show', events_path%></li>
			<li class='nav-links'><%= link_to 'Logout', logout_path%></li>
		</ul>
	</div>
 <% else %>
 		<div class="collapse navbar-collapse navbar-ex1-collapse">
		<ul class="nav navbar-nav navbar-right">
			<li class='nav-links'><%= link_to 'Users', users_path%></li>
			<li class='nav-links'><%= link_to 'See a Show', events_path%></li>
			<li class='nav-links'><%= link_to 'Login', '#login', 'data-toggle' => 'modal', 'data-target' => '#login'%></li>
			<li class='nav-links'><%= link_to 'Sign-Up', '#signup', 'data-toggle' => 'modal', 'data-target' => '#signup'%></li>
		</ul>
	</div>
<% end %>
</nav>

<%= yield %>

<div class="modal fade" id="login" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog">
    <div class="modal-content">
    	<h1>Login</h1>
				<%= bootstrap_form_for(:user, url: login_path) do |f| %>
				<%= f.text_field :email, placeholder: 'Email', class: 'form-control' %>
				<%= f.password_field :password, placeholder: 'Password', class: 'form-control'%>
				<%= f.primary 'Log In '%>
				<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
			<% end %>
    </div>
  </div>
</div>

<div class="modal fade" id="signup" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog">
    <div class="modal-content">
    	<h1>Sign-Up</h1>
				<%= bootstrap_form_for :user, url: signup_path do |f| %>
				<%= f.text_field :name, placeholder: 'Name' %>
				<%= f.text_field :email, placeholder: 'Email' %>
				<%= f.password_field :password, placeholder: 'Password' %>
				<%= f.password_field :password_confirmation, placeholder: 'Re-Type Password' %>
				<%= f.primary 'Sign Up'%>
				<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
			<% end %>
    </div>
  </div>
</div>

<script src="//netdna.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
	<script>
    jQuery(function($) {
      $('body').panelSnap();
    });
 </script>
</body>
</html>
